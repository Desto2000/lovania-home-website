---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'About', href: '/about' }
];

const currentPath = Astro.url.pathname;
---

<header
    class="relative py-4 px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16 max-w-7xl mx-auto w-full px-4 md:px-8 py-3 flex items-center justify-between min-h-[4.5rem]"
>
    <a href="/" style="text-decoration-line: none !important;">
        <Logo />
    </a>
    <div class="hidden md:flex md:flex-1 md:justify-center"><nav class="flex items-center space-x-4"></nav></div>
    <div class="flex items-center justify-end space-x-2 md:space-x-4 flex-1">
        {
            !!navItems?.length && (
                <ul class="hidden md:flex items-center space-x-4">
                    {navItems.map((item) => (
                        <li>
                            <a href={item.href} class={`px-2 hover:text-gray-600 transition-colors ${currentPath === item.href ? 'font-bold' : ''}`}>
                                {item.linkText}
                            </a>
                        </li>
                    ))}
                </ul>
            )
        }
    </div>
</header>
