---
import '../../src/styles/footer.css';
import LSVG from '../components/LogoSVG.astro';

export interface Props {
    ctaTitle?: string;
    ctaDescription?: string;
    primaryCTA?: {
        text: string;
        href: string;
    };
    secondaryCTA?: {
        text: string;
        href: string;
    };
}

const {
    ctaTitle = 'Ready to Push Boundaries?',
    ctaDescription = 'Explore our research initiatives or discuss how we can architect solutions for your enterprise infrastructure challenges.',
    primaryCTA = {
        text: 'Explore Our Research',
        href: '/research'
    },
    secondaryCTA = {
        text: 'Contact Us',
        href: '/contact'
    }
} = Astro.props;
---

<!-- Footer CTA Section - IBM Style -->
<footer class="ibm-footer-cta">
    <!-- CTA Component -->
    <section class="ibm-cta-section">
        <div class="ibm-container">
            <div class="ibm-cta-content">
                <h2 class="ibm-cta-title">{ctaTitle}</h2>
                <p class="ibm-cta-description">{ctaDescription}</p>
                <div class="ibm-cta-actions">
                    <a href={primaryCTA.href} class="ibm-btn ibm-btn--primary">
                        <span>{primaryCTA.text}</span>
                        <svg class="ibm-btn__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M5 12h14M12 5l7 7-7 7"></path>
                        </svg>
                    </a>
                    <a href={secondaryCTA.href} class="ibm-btn ibm-btn--secondary">
                        <span>{secondaryCTA.text}</span>
                        <svg class="ibm-btn__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M5 12h14M12 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Content -->
    <section class="footer-content">
        <div class="max-w-6xl mx-auto px-6">
            <!-- Main Footer Layout -->
            <div class="footer-layout">
                <!-- Logo Section - Separate Block -->
                <div class="footer-logo-section">
                    <div style="display: inline-flex; gap: 0.5rem;">
                        <LSVG size={40} />
                        <h3 class="logo-abs footer-brand-name">LOVANIA</h3>
                    </div>
                    <p class="footer-brand-tagline">Research-Driven Enterprise Infrastructure</p>
                </div>

                <!-- Links Section -->
                <div class="footer-links-section">
                    <!-- Discover -->
                    <div class="footer-column">
                        <h4 class="footer-heading">Discover</h4>
                        <ul class="footer-links">
                            <li><a href="/research" class="footer-link">Research</a></li>
                            <li><a href="/methodology" class="footer-link">Methodology</a></li>
                            <li><a href="/solutions" class="footer-link">Solutions</a></li>
                            <li><a href="/case-studies" class="footer-link">Case studies</a></li>
                            <li><a href="/insights" class="footer-link">Insights</a></li>
                        </ul>
                    </div>

                    <!-- Connect -->
                    <div class="footer-column">
                        <h4 class="footer-heading">Connect</h4>
                        <ul class="footer-links">
                            <li><a href="/contact" class="footer-link">Contact</a></li>
                            <li><a href="/partnerships" class="footer-link">Partnerships</a></li>
                            <li><a href="/research-collaboration" class="footer-link">Research collaboration</a></li>
                            <li><a href="/support" class="footer-link">Support</a></li>
                        </ul>
                    </div>

                    <!-- Follow/Social -->
                    <div class="footer-column">
                        <h4 class="footer-heading">Follow</h4>
                        <ul class="footer-links">
                            <li><a href="https://github.com/Desto2000" class="footer-link" target="_blank" rel="noopener">GitHub</a></li>
                            <li><a href="/newsletter" class="footer-link">Newsletter</a></li>
                        </ul>
                    </div>

                    <!-- Legal Links Section - Aligned with Main Columns -->
                    <div class="footer-legal-section">
                        <div class="footer-legal-grid">
                            <!-- First Column - Aligned with Discover -->
                            <div class="footer-legal-column">
                                <a href="/contact" class="footer-legal-link">Contact Lovania</a>
                                <a href="/terms" class="footer-legal-link">Terms of use</a>
                            </div>

                            <!-- Second Column - Aligned with Connect -->
                            <div class="footer-legal-column">
                                <a href="/privacy" class="footer-legal-link">Privacy</a>
                                <a href="/accessibility" class="footer-legal-link">Accessibility</a>
                            </div>

                            <!-- Third Column - Empty (maintains alignment) -->
                            <div class="footer-legal-column">
                                <!-- Empty to maintain 3-column alignment -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</footer>
