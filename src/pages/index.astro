---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
import Markdown from '../components/Markdown.astro';

const mission = `
We bridge the gap between cutting-edge research and enterprise reality. Through deep technical research in system architecture, data infrastructure, and machine learning operations, we develop solutions that scale from proof-of-concept to production.
`;

const approach = `
Our approach is research-first: we investigate fundamental challenges in distributed systems, analyze performance bottlenecks, and architect solutions that enterprises can trust. We don't just implement existing patternsâ€”we research new ones.
`;
---

<Layout title="Lovania - Research-Driven Enterprise Solutions">
    <ContextAlert class="mb-8" />

    <!-- Hero Section - Perfect Viewport Fit -->
    <section class="hero-section items-center justify-center relative">
        <div class="max-w-7xl mx-auto text-left px-6">
            <h1 class="expression-title mb-8">Research-Driven Enterprise Infrastructure</h1>
            <p class="text-xl sm:text-2xl font-normal text-gray-60 mb-12 max-w-4xl leading-snug">
                We conduct advanced research in system architecture and data infrastructure, delivering enterprise-grade solutions that push technological
                boundaries.
            </p>
            <div class="hero-buttons">
                <a href="/research" class="btn-enterprise btn-primary">
                    <span>Explore Our Research</span>
                    <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M5 12h14M12 5l7 7-7 7"></path>
                    </svg>
                </a>
                <a href="/contact" class="btn-enterprise btn-secondary">
                    <span>Contact Us</span>
                    <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M5 12h14M12 5l7 7-7 7"></path>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- Mission Section -->
    <section class="section-spacing">
        <div class="max-w-7xl mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center">
                <div>
                    <h2 class="text-4xl sm:text-4xl font-normal mb-8 text-gray-90">Bridging Research & Reality</h2>
                    <Markdown content={mission} class="text-lg text-gray-60 leading-relaxed" />
                </div>
                <div class="lg:pl-8">
                    <h3 class="text-xl font-medium mb-8 text-blue-60">Our Focus Areas</h3>

                    <!-- Table-like Focus Areas -->
                    <div class="focus-table">
                        <div class="focus-row">
                            <span class="focus-label">System Architecture</span>
                        </div>
                        <div class="focus-row">
                            <span class="focus-label">Data Infrastructure</span>
                        </div>
                        <div class="focus-row">
                            <span class="focus-label">Machine Learning Operations</span>
                        </div>
                        <div class="focus-row">
                            <span class="focus-label">Performance Analysis</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Methodology Section with Flexbox for Perfect Centering -->
    <section class="section-spacing items-center justify-center bg-gray-10">
        <div class="max-w-7xl items-center justify-center mx-auto px-6 text-left grid grid-cols-1 item-1x3-grid">
            <div class="">
                <h2 class="text-1xl sm:text-4xl font-normal mb-8 text-gray-90">Our Methodology</h2>
                <Markdown content={approach} class="text-lg text-gray-60 leading-relaxed max-w-80" />
            </div>

            <!-- Flexbox Methodology Layout for Perfect Arrow Centering -->
            <div class="methodology-flexbox">
                <div class="methodology-box">
                    <h3 class="text-xl font-medium text-gray-90 mb-3">Research</h3>
                    <p class="text-gray-60">Deep technical investigation of system challenges</p>
                </div>

                <div class="methodology-arrow-flex">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" class="arrow-connector">
                        <path d="M5 12h14M12 5l7 7-7 7"></path>
                    </svg>
                </div>

                <div class="methodology-box">
                    <h3 class="text-xl font-medium text-gray-90 mb-3">Architect</h3>
                    <p class="text-gray-60">Design scalable enterprise solutions</p>
                </div>

                <div class="methodology-arrow-flex">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" class="arrow-connector">
                        <path d="M5 12h14M12 5l7 7-7 7"></path>
                    </svg>
                </div>

                <div class="methodology-box">
                    <h3 class="text-xl font-medium text-gray-90 mb-3">Deliver</h3>
                    <p class="text-gray-60">Production-ready infrastructure</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="section-spacing">
        <div class="max-w-7xl items-center justify-center mx-auto px-6 text-left">
            <h2 class="text-5xl sm:text-4xl font-normal text-left mb-16 text-gray-90">Enterprise-Grade Results</h2>

            <!-- Table-like Stats Grid -->
            <div class="stats-table">
                <div class="stats-box">
                    <div class="text-5xl max-w-2xs font-semibold text-blue-60 mb-4">Research-First</div>
                    <div class="text-xl text-gray-900 font-medium mb-2">Approach to Innovation</div>
                    <div class="font-medium">Deep technical research drives every solution we architect</div>
                </div>
                <div class="stats-box">
                    <div class="text-5xl max-w-2xs font-semibold text-blue-60 mb-4">Enterprise-Grade</div>
                    <div class="text-xl text-gray-90 font-medium mb-2">Solutions & Architecture</div>
                    <div class="font-medium">Built to scale and trusted by enterprise organizations</div>
                </div>
                <div class="stats-box">
                    <div class="text-5xl max-w-2xs font-semibold text-blue-60 mb-4">Production-Ready</div>
                    <div class="text-xl text-gray-90 font-medium mb-2">Scalable Infrastructure</div>
                    <div class="font-medium">From proof-of-concept to production deployment</div>
                </div>
            </div>
        </div>
    </section>
</Layout>
