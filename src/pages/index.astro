---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
import Markdown from '../components/Markdown.astro';

const mission = `
We bridge the gap between cutting-edge research and enterprise reality. Through deep technical research in system architecture, data infrastructure, and machine learning operations, we develop solutions that scale from proof-of-concept to production.
`;

const approach = `
Our approach is research-first: we investigate fundamental challenges in distributed systems, analyze performance bottlenecks, and architect solutions that enterprises can trust. We don't just implement existing patternsâ€”we research new ones.
`;
---

<Layout title="Lovania - Research-Driven Enterprise Solutions">
    <ContextAlert class="mb-8" />

    <!-- Hero Section - IBM Asymmetric Grid -->
    <section class="ibm-hero-section">
        <div class="ibm-container">
            <div class="ibm-hero-grid">
                <div class="ibm-hero-content">
                    <h1 class="ibm-hero-title">Research-Driven Enterprise Infrastructure</h1>
                    <p class="ibm-hero-description">
                        We conduct advanced research in system architecture and data infrastructure, delivering enterprise-grade solutions that push technological
                        boundaries.
                    </p>
                    <div class="ibm-hero-actions">
                        <a href="/research" class="ibm-btn ibm-btn--primary">
                            <span>Explore Our Research</span>
                            <svg class="ibm-btn__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M5 12h14M12 5l7 7-7 7"></path>
                            </svg>
                        </a>
                        <a href="/contact" class="ibm-btn ibm-btn--secondary">
                            <span>Contact Us</span>
                            <svg class="ibm-btn__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M5 12h14M12 5l7 7-7 7"></path>
                            </svg>
                        </a>
                    </div>
                </div>
                <div class="ibm-hero-visual">
                    <!-- Reserved space for future visual elements -->
                    <div class="ibm-hero-accent"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Mission Section - IBM Asymmetric Grid -->
    <section class="ibm-section">
        <div class="ibm-container">
            <div class="ibm-grid-2-1">
                <div class="ibm-content-primary">
                    <h2 class="ibm-section-title">Bridging Research & Reality</h2>
                    <Markdown content={mission} class="ibm-body-text" />
                </div>
                <div class="ibm-content-secondary">
                    <h3 class="ibm-section-subtitle">Our Focus Areas</h3>
                    <div class="ibm-focus-list">
                        <div class="ibm-focus-item">
                            <span class="ibm-focus-label">System Architecture</span>
                        </div>
                        <div class="ibm-focus-item">
                            <span class="ibm-focus-label">Data Infrastructure</span>
                        </div>
                        <div class="ibm-focus-item">
                            <span class="ibm-focus-label">Machine Learning Operations</span>
                        </div>
                        <div class="ibm-focus-item">
                            <span class="ibm-focus-label">Performance Analysis</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Methodology Section - IBM Card Layout -->
    <section class="ibm-section ibm-section--gray">
        <div class="ibm-container">
            <div class="ibm-section-header">
                <h2 class="ibm-section-title">Our Methodology</h2>
                <Markdown content={approach} class="ibm-body-text ibm-section-description" />
            </div>

            <!-- IBM-style Process Cards -->
            <div class="ibm-process-grid">
                <div class="ibm-process-card">
                    <div class="ibm-process-number">01</div>
                    <h3 class="ibm-process-title">Research</h3>
                    <p class="ibm-process-description">Deep technical investigation of system challenges</p>
                </div>

                <div class="ibm-process-card">
                    <div class="ibm-process-number">02</div>
                    <h3 class="ibm-process-title">Architect</h3>
                    <p class="ibm-process-description">Design scalable enterprise solutions</p>
                </div>

                <div class="ibm-process-card">
                    <div class="ibm-process-number">03</div>
                    <h3 class="ibm-process-title">Deliver</h3>
                    <p class="ibm-process-description">Production-ready infrastructure</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section - IBM Card Grid -->
    <section class="ibm-section">
        <div class="ibm-container">
            <h2 class="ibm-section-title ibm-section-title--center">Enterprise-Grade Results</h2>

            <!-- IBM-style Stats Grid -->
            <div class="ibm-stats-grid">
                <div class="ibm-stat-card">
                    <div class="ibm-stat-value">Research-First</div>
                    <div class="ibm-stat-label">Approach to Innovation</div>
                    <div class="ibm-stat-description">Deep technical research drives every solution we architect</div>
                </div>
                <div class="ibm-stat-card">
                    <div class="ibm-stat-value">Enterprise-Grade</div>
                    <div class="ibm-stat-label">Solutions & Architecture</div>
                    <div class="ibm-stat-description">Built to scale and trusted by enterprise organizations</div>
                </div>
                <div class="ibm-stat-card">
                    <div class="ibm-stat-value">Production-Ready</div>
                    <div class="ibm-stat-label">Scalable Infrastructure</div>
                    <div class="ibm-stat-description">From proof-of-concept to production deployment</div>
                </div>
            </div>
        </div>
    </section>
</Layout>
