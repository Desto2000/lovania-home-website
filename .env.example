# Environment Configuration for Lovania Contact System

# Email Configuration
NOTIFICATION_EMAIL=contact@lovania.com

# Email Service Configuration (Choose one)
# For SendGrid:
# SENDGRID_API_KEY=your_sendgrid_api_key

# For AWS SES:
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# For Resend:
# RESEND_API_KEY=your_resend_api_key

# Admin Configuration
ADMIN_SECRET=admin_secret_key_change_in_production

# Database Configuration (Netlify Blobs is used by default)
# For external database, add connection strings here

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Features
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_CSV_EXPORT=true
ENABLE_ADMIN_DASHBOARD=true